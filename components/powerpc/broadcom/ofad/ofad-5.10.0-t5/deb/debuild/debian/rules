#!/usr/bin/make -f

DEB_DH_INSTALL_SOURCEDIR = debian/tmp

INSTALL_DIR = $(CURDIR)/$(DEB_DH_INSTALL_SOURCEDIR)

OFAD_5_10_0_DIR := $(SWITCHLIGHT)/components/powerpc/broadcom/ofad/ofad-5.10.0-t5

%:
	dh $@

build-arch:
	dh build-arch

clean:
	dh clean

override_dh_auto_install:
	mkdir -p $(INSTALL_DIR)/usr/bin $(INSTALL_DIR)/etc/init.d
	cp $(OFAD_5_10_0_DIR)/build/$(DEB_HOST_GNU_TYPE)/bin/ofad.shared $(INSTALL_DIR)/usr/bin/ofad-5.10-t5
	cp $(OFAD_5_10_0_DIR)/build/$(DEB_HOST_GNU_TYPE)/bin/brcm_ly2_gpio_init $(INSTALL_DIR)/usr/bin/brcm_ly2_gpio_init
	cp $(OFAD_5_10_0_DIR)/build/$(DEB_HOST_GNU_TYPE)/bin/brcm_ly2_phy_reset $(INSTALL_DIR)/usr/bin/brcm_ly2_phy_reset
	cp $(SWITCHLIGHT)/components/all/ofad/ofad-ctl $(INSTALL_DIR)/usr/bin/ofad-ctl
	cp $(SWITCHLIGHT)/components/all/ofad/ofad.init debian

override_dh_installinit:
	dh_installinit --name=ofad

override_dh_shlibdeps:
	@echo "warning: ignoring shlibdeps due to libbroadcom.so dependency."

override_dh_strip:
	dh_strip --dbg-package=ofad-5.10.0-t5-dbg
