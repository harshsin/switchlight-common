DEB_DH_INSTALL_SOURCEDIR = debian/tmp
INSTALL_DIR = $(CURDIR)/$(DEB_DH_INSTALL_SOURCEDIR)

%:
	dh $@

build-arch:
	dh build-arch

clean:
	dh clean

override_dh_auto_install:
	mkdir -p $(INSTALL_DIR)/usr/kernels/as6700/src
	mkdir -p $(INSTALL_DIR)/usr/kernels/as6700/dtb
	cp -R ../../linux-as6700-headers $(INSTALL_DIR)/usr/kernels/as6700/src
	cp ../../kernel-as6700 $(INSTALL_DIR)/usr/kernels/as6700
	cp ../../kernel-as6700.bin.gz $(INSTALL_DIR)/usr/kernels/as6700
	cp -R ../../linux-as6700-dtbs/*.dtb $(INSTALL_DIR)/usr/kernels/as6700/dtb

override_dh_strip:
	@echo "Skipping dh_strip"


