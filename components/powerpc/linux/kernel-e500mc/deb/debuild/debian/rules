DEB_DH_INSTALL_SOURCEDIR = debian/tmp
INSTALL_DIR = $(CURDIR)/$(DEB_DH_INSTALL_SOURCEDIR)

%:
	dh $@

build-arch:
	dh build-arch

clean:
	dh clean

override_dh_auto_install:
	mkdir -p $(INSTALL_DIR)/usr/kernels/e500mc/src
	mkdir -p $(INSTALL_DIR)/usr/kernels/e500mc/dtb
	cp -R ../../linux-e500mc-headers $(INSTALL_DIR)/usr/kernels/e500mc/src
	cp ../../kernel-e500mc $(INSTALL_DIR)/usr/kernels/e500mc
	cp ../../kernel-e500mc.bin.gz $(INSTALL_DIR)/usr/kernels/e500mc
	cp -R ../../linux-e500mc-dtbs/*.dtb $(INSTALL_DIR)/usr/kernels/e500mc/dtb

override_dh_strip:
	@echo "Skipping dh_strip"


