#!/usr/bin/make -f

DEB_DH_INSTALL_SOURCEDIR = debian/tmp
INSTALL_DIR = $(CURDIR)/$(DEB_DH_INSTALL_SOURCEDIR)

%:
	dh $@

build-arch:
	dh build-arch

clean:
	dh clean

override_dh_auto_install:
	mkdir -p $(INSTALL_DIR)/usr/platforms/quanta-ly5
	cp ../../switchlight.quanta-ly5.loader $(INSTALL_DIR)/usr/platforms/quanta-ly5/
	cp ../../switchlight.quanta-ly5.flash $(INSTALL_DIR)/usr/platforms/quanta-ly5/

