DEB_DH_INSTALL_SOURCEDIR = debian/tmp
INSTALL_DIR = $(CURDIR)/$(DEB_DH_INSTALL_SOURCEDIR)

include $(SWITCHLIGHT)/make/config.mk

%:
	dh $@

clean:
	dh clean


SDK_SRC_INSTALL_DIR := $(INSTALL_DIR)/usr/src/libbroadcom-6.2-internal-sdk

override_dh_auto_install:
	mkdir -p $(SDK_SRC_INSTALL_DIR)
	cp -R $(SDK)/include $(SDK_SRC_INSTALL_DIR)
	cp -R $(SDK)/systems/bde $(SDK_SRC_INSTALL_DIR)
	cp $(SDK)/RELEASE $(SDK_SRC_INSTALL_DIR)
	mkdir -p $(SDK_SRC_INSTALL_DIR)/src/appl
	cp -R $(SDK)/src/appl/cint $(SDK_SRC_INSTALL_DIR)/src/appl
	cp -R $(SDK)/src/shared $(SDK_SRC_INSTALL_DIR)/src/shared
	mkdir -p $(SDK_SRC_INSTALL_DIR)/src/bcm
	cp -R $(SDK)/src/bcm/common $(SDK_SRC_INSTALL_DIR)/src/bcm/common
	mkdir -p $(SDK_SRC_INSTALL_DIR)/src/soc/phy/fcmap
	cp -R $(SDK)/src/soc/phy/fcmap/include $(SDK_SRC_INSTALL_DIR)/src/soc/phy/fcmap

